<h1>Connect Four</h1>

<!-- can I use ruby to draw this using times  -->
<div class="game">
  <table>
    <tbody>
    <% @rows.times do |r| %>
      <tr class="row<%= @rows - 1 - r %>">
      <% @columns.times do |c| %>
        <td class="row<%= @rows - 1 - r %> col<%= c  %>"></td>
      <% end %>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
      <tr>
        <% @columns.times do |c| %>
          <td><button id="col<%= c %>" onclick="placeChip(<%= c %>)">Push</button></td>
        <% end %>       
      </tr>
    </tfoot>
  </table>
</div>